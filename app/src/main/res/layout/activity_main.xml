<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background_home_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:gravity="center"
        android:id="@+id/txtWelcomeMsg"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="50dp"
        android:background="#DA4779"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:id="@+id/txtUserDetail"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/rounded"
        android:textColor="#71253F"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/btnsignOut"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Employee List"
        android:id="@+id/showEmployee"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Users List"
        android:id="@+id/showUsers"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="24sp"
        />


</LinearLayout>